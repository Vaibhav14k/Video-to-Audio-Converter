    <!-- Main Converter Box -->
    <div class="bg-gray-800 p-8 mt-10 rounded-lg shadow-lg text-center w-96">
        <h1 class="text-2xl font-bold mb-4">YouTube to MP3 Converter</h1>
        <form action="/convert-mp3" method="post" id="form" class="space-y-4">
            <input type="text" name="videoURL" placeholder="https://www.youtube.com/watch?v=dYIbRoudm4U"
                class="w-full p-2 text-black rounded-lg border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            
            <button id="convert-btn" 
                class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
                Convert
            </button>
        </form>
    </div>

    <!-- Success/Error Message -->
    <div class="mt-6 w-96 text-center">
        <% if (typeof success !== "undefined") { %>
            <div class="<%= success ? 'bg-green-600' : 'bg-red-600' %> p-4 rounded-lg shadow-lg">
                <% if (success) { %>
                    <p class="font-semibold"><%= song_title %></p>
                    <a href="<%= song_link %>">
                        <button class="mt-2 bg-white text-green-600 font-bold py-2 px-4 rounded-lg hover:bg-gray-200 transition duration-300">
                            DOWNLOAD
                        </button>
                    </a>
                <% } else { %>
                    <p class="font-semibold"><%= message %></p>
                <% } %>
            </div>
        <% } %>
    </div>

